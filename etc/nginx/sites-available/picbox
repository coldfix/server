server {
    listen      443 ssl;
    listen [::]:443 ssl;
    server_name pics.coldfix.de pix.coldfix.de picbox.coldfix.de
                pics.coldfix.eu pix.coldfix.eu picbox.coldfix.eu
                pics.fireflake.de pix.fireflake.de picbox.fireflake.de
                pics.fireflake.eu pix.fireflake.eu picbox.fireflake.eu;
    access_log /var/log/nginx/access_pics.log;
    client_max_body_size 100m;
    location / {
        proxy_pass                          http://picbox:80;
        proxy_set_header X-Real-IP          $remote_addr;
        proxy_set_header Host               $host;
        proxy_set_header X-Forwarded-For    $proxy_add_x_forwarded_for;
        proxy_set_header Upgrade            $http_upgrade;
        proxy_set_header Connection         upgrade;
    }
}
