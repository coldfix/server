# Redirect all traffic to HTTPS:
server {
    listen      80  default_server;
    listen [::]:80;
    server_name _;
    return 301 https://$host$request_uri;
}

# Fallback (unknown subdomain):
server {
    listen      443 default_server ssl;
    listen [::]:443 ssl;
    server_name _;
    location / {
        internal;
    }
    access_log /var/log/nginx/access_fallback.log;
}
